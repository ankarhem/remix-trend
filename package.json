    "@graphql-typed-document-node/core": "^3.1.1",
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@types/react": "^17.0.44",
    "@types/react-dom": "^17.0.16",
    "@types/react-slider": "^1.3.1",
    "@types/uuid": "^8.3.4",
    "autoprefixer": "^10.4.5",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
